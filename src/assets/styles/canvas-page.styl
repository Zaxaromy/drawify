base-color = rgba(76, 92, 209, 1)

body
  margin 0
  user-select none
  background-color base-color

.canvas-page
  margin-top 60px
  display flex
  justify-content center

.canvas-wrapper
  display flex
  align-items center
  justify-content center
  flex-direction column

canvas
  background radial-gradient(#eee 15%, transparent 16%) 0 0 / 20px 20px
  background-color white
  cursor url("../icons/brush.svg") -13 29, auto
