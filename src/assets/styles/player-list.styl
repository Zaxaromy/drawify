.player-list-wrapper
  display flex
  align-items center
  flex-direction column
  width 280px
  height 800px
  font-family 'Nosifer', sans-serif
  margin-top -1px
  margin-right 10px
  background-color white
  outline 5px solid rgba(57,69,157,0.4)
  border-radius 15px
  
.player-list-content
  display flex
  align-items center
  flex-direction column
  width 270px
  height 800px
  margin-top 5px
  margin-bottom 5px
  //background-color red
  border-radius 15px
  overflow-y scroll

.player-list-content::-webkit-scrollbar
  width 10px

.player-list-content::-webkit-scrollbar-thumb
  background-color lighten(darkgray, 30%)
  border-radius 5px
  opacity 50%

.player-list-content::-webkit-scrollbar-track
  opacity 0

.host-title-wrapper
  background-color rgba(76, 92, 209, 1)
  width fit-content
  height fit-content
  border none
  border-radius 10px
  margin-top 10px
  margin-bottom 15px
  
.host-title
  display flex
  justify-content center
  padding 8px 0 5px 0
  width 80px
  background-color rgba(57,69,157,0.1)
  border-radius 10px
  color white
  font-weight 700
  
.host-content-wrapper
  display flex
  flex-direction row
  justify-content start
  width 90%
  align-items center
  margin-bottom 15px
  
.host-content-outline
  outline 1px solid rgba(128, 128, 128, 0.5)
  position absolute
  width 13%
  height 70px
  margin-top 63px
  border-radius 10px
  margin-left 10px
  display none
  
.crown-icon
  width 35px
  height 35px
  margin-left 10px
  
.players-title-wrapper
  background-color rgba(76, 92, 209, 1)
  width fit-content
  height fit-content
  border none
  border-radius 10px
  margin-bottom 15px

.players-title
  display flex
  justify-content center
  padding 8px 8px 5px 8px
  width 100px
  background-color rgba(57,69,157,0.1)
  border-radius 10px
  color white
  font-weight 700
  
.player-content-wrapper
  display flex
  flex-direction row
  justify-content start
  width 90%
  align-items center
  margin-bottom 20px
  outline 1px solid rgba(128, 128, 128, 0)
  border-radius 10px
  
.player-content-outline
  outline 1px solid rgba(128, 128, 128, 0.5)
  position absolute
  width 13%
  height 70px
  margin-top 188.5px
  border-radius 10px
  margin-left 10px
  display none

.empty-player-wrapper
  display flex
  flex-direction row
  justify-content start
  width 90%
  align-items center
  margin-bottom 20px
  
.pfp-outline
  outline 3px solid rgba(76, 92, 209, 1)
  border-radius 50%
  
.pfp
  width 50px
  height 50px
  display flex
  padding 3px
  border-radius 50%
  background-color rgba(76, 92, 209, 0.5)
  
.username
  font-family 'QuickSand', sans-serif
  font-weight 700
  margin-left 10px
  opacity 50%
  
.hidden
  display none
  